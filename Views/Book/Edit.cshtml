@* @model LibraryManagement.Models.Book *@
@model LibraryManagement.ViewModels.BookViewModel

<h2>Edit Book</h2>

<form asp-controller="Book" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title">Book</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span> 
    </div>

    <div class="form-group">
    <label asp-for="AuthorId">Author</label>
    <select asp-for="AuthorId" asp-items="new SelectList(Model.AuthorList, nameof(Author.ID), nameof(Author.AuthorName))" class="form-control">
        <option value="">Select an Author</option>
    </select>
    <span asp-validation-for="AuthorId" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="BranchId">Branch</label>
    <select asp-for="BranchId" asp-items="new SelectList(Model.BranchList, nameof(Branch.ID), nameof(Branch.BranchName))" class="form-control">
        <option value="">Select a Branch</option>
    </select>
    <span asp-validation-for="BranchId" class="text-danger"></span>
</div>

    <p class=title>
        <button type="submit" class="btn btn-primary">Submit</button>
    </p>
</form>

<p class=title>
    @* do *@
    <a asp-action="Details" asp-route-id="@Model.BookId">Back to Book Details</a> |
</p>