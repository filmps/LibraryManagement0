@model List<LibraryManagement.Models.Author>

<h2>Author List</h2>

<p class=title>
    <a href='@Url.Action("Create", "Author")' class="btn btn-primary">Create Author</a>
</p>


<p class=title>Total: @Model.Count</p>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Author Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.ID</td>
                <td>@author.AuthorName</td>
                <td>
                    <a href='@Url.Action("Details", "Author", new { id = author.ID })' class="btn btn-info1">Details</a>
                    &nbsp;
                    <a href='@Url.Action("Edit", "Author", new { id = author.ID })' class="btn btn-info2">Edit</a>
                    &nbsp;
                    <a href='@Url.Action("Delete", "Author", new { id = author.ID })' class="btn btn-warning"
                    onclick="return confirm('Are you sure you want to delete this author?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
